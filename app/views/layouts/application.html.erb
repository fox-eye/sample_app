<!DOCTYPE >
<html>
	<head>
		<title><%= title %></title>
		<%= csrf_meta_tag %>
		<!--[if lt IE 9]>
			<script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->	
				
		<!--[if lt IE 8]>
			<%= stylesheet_link_tag "blueprint/ie",:media => "screen" %>
